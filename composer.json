{
    "name": "vultr/vultr-php",
    "description": "The Official Vultr API PHP Wrapper.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/vultr/vultr-php",
    "keywords": [
        "vultr",
        "vultr-api",
        "vultr-api-version-2",
        "vultr-php"
    ],
    "authors": [
        {
            "name": "The Constant Company, LLC.",
            "email": "developers@vultr.com",
            "homepage": "https://www.vultr.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "json-mapper/json-mapper": "^2.10",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-factory": "^1.0",
        "php-http/discovery": "^1.14"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.4",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Vultr\\VultrPhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vultr\\VultrPhp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
