{
    "name": "vultr/vultr-php",
    "description": "The Official Vultr API PHP Wrapper.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/vultr/vultr-php",
    "keywords": [
        "vultr", "vultr-api", "vultr-api-version-2", "vultr-php",
        "psr-7", "psr-17", "psr-18",
        "http", "client", "discovery", "message", "factory"
    ],
    "authors": [
        {
            "name": "The Constant Company, LLC.",
            "email": "opensource@vultr.com",
            "homepage": "https://www.vultr.com"
        },
        {
            "name": "Vinnie Marone",
            "email": "vmarone@vultr.com"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "beta",
    "require": {
        "php": "^8.0",
        "json-mapper/json-mapper": "^2.10",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-factory": "^1.0",
        "php-http/discovery": "^1.14"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.4",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Vultr\\VultrPhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vultr\\VultrPhp\\Tests\\": "tests/",
            "Http\\Discovery\\": "vendor/php-http/discovery/src"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
